    {% block desktopContent %}
        <a href="/" class="navbar__desktop-content-logo" style="background-image: url({{ entry.logo.one().url }})"></a>
        <ul class="navbar__desktop-content-links">
            <li class="navbar__desktop-content-link">
                <a href="https://accounts.spotify.com/en/login" class="navbar__desktop-content-link-title" target="_blank">Login</a>
                <span class="navbar__desktop-content-cursor">&#9602;</span>
            </li>
            <li class="navbar__desktop-content-link">
                <a href="/" class="navbar__desktop-content-link-title">Home</a>
                <span class="navbar__desktop-content-cursor">&#9602;</span>
            </li>
            <li class="navbar__desktop-content-link">
                <a href="/about" class="navbar__desktop-content-link-title">About</a>
                <span class="navbar__desktop-content-cursor">&#9602;</span>
                <ul class="navbar__desktop-content-link-dropdown">
                    {% set allAbout = craft.entries().section('About').all %}
                    {% for about in allAbout %}
                        {% if about.parent == 'About' %}
                            <li class="navbar__desktop-content-link-dropdown-element">
                                &#11208;<a class="navbar__desktop-content-link-dropdown-element-link" href="/about/{{ about.title }}">{{ about.title }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </li>
        </ul>
    {% endblock %}
{% endembed %}

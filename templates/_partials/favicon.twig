{# dynamic url for accessing corresponding favicons for multisite and multilanguage sites #}
{% set currentSite = currentSite.handle|split('_')[0] %}

<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/favicon-{{ currentSite }}/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-{{ currentSite }}/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-{{ currentSite }}/favicon-16x16.png">
<link rel="manifest" href="/assets/images/favicon-{{ currentSite }}/site.webmanifest">
<link rel="mask-icon" href="/assets/images/favicon-{{ currentSite }}/safari-pinned-tab.svg" color="#5bbad5">
<link rel="shortcut icon" href="/assets/images/favicon-{{ currentSite }}/favicon.ico">
<meta name="msapplication-TileColor" content="#ffffff">
<meta name="msapplication-config" content="/assets/images/favicon-{{ currentSite }}/browserconfig.xml">
<meta name="theme-color" content="#ffffff">

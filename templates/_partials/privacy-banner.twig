{% set privacyBanner = craft.app.globals.getSetByHandle('privacyBanner') %}
{% if privacyBanner|length > 0 %}
    <div class="privacy-banner">
        <div class="container">
            <div class="privacy-banner__text">
                {{ privacyBanner.richText }}
            </div>
            <button class="privacy-banner__button"><i class="fa fa-close"></i></button>
        </div>
    </div>
{% endif %}

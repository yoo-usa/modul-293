{{ loadCssComponent('spotify-connection') }}

<div class="spotify-connection">
    <ul class="spotify-connection__list"></ul>
    <div class="spotify-connection__spinner spinner-grow" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <input type="text" class="spotify-connection__search" placeholder="nmixx">
    <iframe class="spotify-connection__audio" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; fullscreen; picture-in-picture" loading="lazy"></iframe>
    <a class="spotify-connection__album-link" href="">View the Album</a>
</div>
